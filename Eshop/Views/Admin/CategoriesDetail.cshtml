@model categoryLink
@{ Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<head>
    <style>
        th {
            width: 150px;
            padding-top: 8%;
        }
    </style>
</head>
<body>
    <h1> Categories </h1>

    @foreach (Category item in ViewBag.Categories)
    {
        <table>
            <thead>
                <tr>
                    <th> @item.name </th>
                    <th> <a asp-controller="categoryLink" asp-action="Delete" asp-route-id="@item.id"> Smazat </a></th>
                </tr>
            </thead>
        </table>
    }
    <br />
    <form asp-controller="categoryLink" asp-action="Insert">

        <select asp-for="CatID" class="form-control" required />
        @foreach (Category cat in ViewBag.Category)
        {
            <option value=@cat.id> @cat.name</option>
        }
        </select>
        <div class="form-group">
            <input asp-for="ProductID" value=@ViewBag.ProductID hidden class="form-control" />
            <span asp-validation-for="ProductID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>

    </form>


</body>